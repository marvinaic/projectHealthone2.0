{% extends 'home.html.twig' %}
{% block section1 %}
    <h3 class="title">medicijnen</h3>
    <a class="button" href="{{ path('drugform') }}">voeg medicijn toe</a>
    <div id="medications">
    {% for drug in drugs %}
        <div class="medicine">
            naam: {{ drug.naam }}<br/><br/>
            werking: {{ drug.werking }}<br/><br/>
            bijwerkingen: {{ drug.bijwerkingen }}<br/><br/>
            verzekerd: {{ drug.verzekerd }}<br/><br/>
            {#  <a class="button" href="{{ path('drugDelete') }}">verwijder medicijn</a>
            <a class="button" href="{{ path('drugModifi') }}">pas medicijn aan</a> #}
        </div>
    {% endfor %}
    </div>
    <h3 class="title">recepten</h3>
    <a class="button" href="{{ path('receptform') }}">voeg recept toe</a>
    <div id="recepten">
        {% for recept in recepten %}
            <div class="recept">
                datum : {{ recept.datum }}<br/><br/>
                dossis : {{ recept.dossis }}<br/><br/>
                duur : {{ recept.duur }}<br/><br/>
                {# <a class="button" href="{{ path('receptDelete') }}">verwijder recept</a>
                <a class="button" href="{{ path('receptModifi') }}">pas recept aan</a> #}
            </div>
        {% endfor %}
    </div>
{% endblock %}